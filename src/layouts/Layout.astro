---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	/* monoton-regular - latin */
	@font-face {
		font-family: "Monoton";
		font-style: normal;
		font-weight: 400;
		src: url("/fonts/monoton/monoton-v15-latin-regular.eot"); /* IE9 Compat Modes */
		src: local(""), url("/fonts/monoton/monoton-v15-latin-regular.eot?#iefix") format("embedded-opentype"),
			/* IE6-IE8 */ url("/fonts/monoton/monoton-v15-latin-regular.woff2") format("woff2"),
			/* Super Modern Browsers */ url("/fonts/monoton/monoton-v15-latin-regular.woff") format("woff"),
			/* Modern Browsers */ url("/fonts/monoton/monoton-v15-latin-regular.ttf") format("truetype"),
			/* Safari, Android, iOS */ url("/fonts/monoton/monoton-v15-latin-regular.svg#Monoton") format("svg"); /* Legacy iOS */
		display: swap;
	}
	/* raleway-regular - latin */
	@font-face {
		font-family: "Raleway";
		font-style: normal;
		font-weight: 400;
		src: url("/fonts/raleway/raleway-v28-latin-regular.eot"); /* IE9 Compat Modes */
		src: local(""), url("/fonts/raleway/raleway-v28-latin-regular.eot?#iefix") format("embedded-opentype"),
			/* IE6-IE8 */ url("/fonts/raleway/raleway-v28-latin-regular.woff2") format("woff2"),
			/* Super Modern Browsers */ url("/fonts/raleway/raleway-v28-latin-regular.woff") format("woff"),
			/* Modern Browsers */ url("/fonts/raleway/raleway-v28-latin-regular.ttf") format("truetype"),
			/* Safari, Android, iOS */ url("/fonts/raleway/raleway-v28-latin-regular.svg#Raleway") format("svg"); /* Legacy iOS */
		display: swap;
	}

	:root {
		--accent: #64c2a6;
		--accent-2: #fa983a;
		--accent-gradient: linear-gradient(90deg, var(--accent-2) 25%, var(--accent) 75%);
	}
	html {
		font-family: "Raleway", sans-serif;
		background-color: #121212;
	}
</style>
